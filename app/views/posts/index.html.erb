<h2 class="text-center mb-3">Main page</h2>

<% @posts.reverse.each do |post| %>
  <div class="alert alert-light text-center">
    <h4><%= post.title %></h4>
    <p class="text-start"><%= post.body %></p>
    <%= link_to 'Read more', post_path(post), class: 'btn btn-sm btn-outline-secondary' %>
  </div>
<% end %>