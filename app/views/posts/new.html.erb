<h2>New post</h2>

<%= form_for :post, url: posts_path, data: {turbo:false} do |f| %>

  <p>
    Название<br>
    <%= f.text_field :title, class: 'form-control' %>
  </p>

  <p>
    Текст статьи<br>
    <%= f.text_area :body, class: 'form-control' %>
  </p>
  
  <p>
    <%= f.submit class: 'btn btn-success' %>
  </p>
  
<% end %>