<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<hr>

<%= link_to "Редактировать", edit_post_path(@post), class: 'btn btn-warning' %>
<%= button_to "Удалить", post_path(@post), method: :delete, class: 'btn btn-danger' %>

<hr>

<h2>Комментарии:</h2>
<%= 'Пока еще нет комментариев' if @post.comments.empty? %>

<% @post.comments.each do |comment| %>
  <div class="alert alert-light">
    <p><b><%= comment.username %></b>: <%= comment.body %></p>
  </div>
<% end %>

<hr>

<h2>Оставьте ваш комментарий</h2>
<%= form_for ([@post, @post.comments.build]) do |f| %>
  <p>
    Пользователь<br>
    <%= f.text_field :username, class: 'form-control' %>
  </p>
  <p>
    Текст комментария<br>
    <%= f.text_area :body, class: 'form-control' %>
  </p> 
  <p>
    <%= f.submit 'Добавить комментарий', class: 'btn btn-success' %>
  </p> 
<% end %>